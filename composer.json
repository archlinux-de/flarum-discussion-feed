{
    "name": "archlinux-de/flarum-discussion-feed",
    "description": "Simple and efficient Atom feed for Flarum",
    "license": "GPL-3.0-or-later",
    "type": "flarum-extension",
    "require": {
        "PHP": "^8.1",
        "flarum/core": "^1.6.0"
    },
    "autoload": {
        "psr-4": {
            "ArchLinux\\DiscussionFeed\\": "src/",
            "ArchLinux\\DiscussionFeed\\Test\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Discussion Feed",
            "icon": {
                "name": "fas fa-rss",
                "backgroundColor": "#ee802f",
                "color": "#fff"
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "nesbot/carbon": "^2.62.1"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
